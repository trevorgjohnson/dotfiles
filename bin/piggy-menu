#!/bin/sh

menu() {
  local prompt="$1"
  local options="$2"
  echo -e "$options" | rofi -dmenu -i -p "$prompt…" "${args[@]}" 2>/dev/null
}

open_in_term() {
  $TERMINAL -e "$1"
}

open_in_editor() {
  notify-send "Editing config file" "$1"
  $TERMINAL -e $EDITOR "$1"
}

launch_wifi() {
    rfkill unblock wifi
    $TERMINAL -e impala
}

launch_bluetooth() {
    rfkill unblock bluetooth
    $TERMINAL -e bluetui
}

go_to_menu() {
  case "${1,,}" in
  *apps*) rofi -show combi -p "Go..." ;;
  *terminal*) $TERMINAL ;;
  *keybinds*) keybindings | rofi -dmenu ;;
  *emoji*) dmoji ;;
  *screenshot*) screenshot ;;
  *wallpaper*) open_in_term select-wallpaper ;;
  *config*) open_in_term edit-config ;;
  *audio*) open_in_term wiremix ;;
  *wifi*) launch_wifi ;;
  *bluetooth*) launch_bluetooth ;;
  *vpn*) toggle-vpn ;;
  *power*) open_in_term select-tlp-profile ;;
  *suspend*) systemctl suspend ;;
  *restart*) systemctl reboot --no-wall ;;
  *shutdown*) systemctl poweroff --no-wall ;;
  esac
}

# current list of items:
# 󰀻   Apps
#    Terminal
#    Keybinds
# 󰞅   Emoji
#    Screenshot
# 󰸉   Wallpaper
#    Config
#    Audio
#    Wifi
# 󰂯   Bluetooth
# 󰴳   VPN
# 󱐋   Power Profile
# 󰤄   Suspend
# 󰜉   Restart
# 󰐥   Shutdown
go_to_menu "$(menu "Go" "󰀻   Apps\n   Terminal\n   Keybinds\n󰞅   Emoji\n   Screenshot\n󰸉   Wallpaper\n   Config\n   Audio\n   Wifi\n󰂯   Bluetooth\n󰴳   VPN\n󱐋   Power Profile\n󰤄   Suspend\n󰜉   Restart\n󰐥   Shutdown")"
