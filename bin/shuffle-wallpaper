#!/bin/bash

WALLPAPER_DIR="$HOME/Pictures/wallpapers/"
CURRENT_WALL=$(hyprctl hyprpaper listloaded)
# Get the names of the monitors with hyprctl
ACTIVE_MONITORS=$(hyprctl monitors -j | jq -r '.[] | .name')
# For each active monitor, set a new random wallpaper
for MONITOR_NAME in $ACTIVE_MONITORS; do
  # Get a random wallpaper that is not the current one
  WALLPAPER=$(find "$WALLPAPER_DIR" -type f ! -name "$(basename "$CURRENT_WALL")" | shuf -n 1)
  # Apply the selected wallpaper
  hyprctl hyprpaper reload "$MONITOR_NAME","$WALLPAPER"
done

